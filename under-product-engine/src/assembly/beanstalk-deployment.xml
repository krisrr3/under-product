<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/PLUGINS/2.2.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/PLUGINS/2.2.0 
          http://maven.apache.org/xsd/assembly-2.2.0.xsd">
    
    <id>beanstalk</id>
    <formats>
        <format>zip</format>
    </formats>
    
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <files>
        <!-- Include the WAR file -->
        <file>
            <source>${project.build.directory}/${project.build.finalName}.war</source>
            <destName>${project.build.finalName}.war</destName>
        </file>
        
        <!-- Include Procfile -->
        <file>
            <source>${project.basedir}/Procfile</source>
            <destName>Procfile</destName>
        </file>
        
        <!-- Include .ebextensions if it exists -->
        <file>
            <source>${project.basedir}/.ebextensions</source>
            <destName>.ebextensions</destName>
            <filtered>false</filtered>
        </file>
    </files>
    
    <!-- Include .ebextensions directory if it exists -->
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/.ebextensions</directory>
            <outputDirectory>.ebextensions</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
    
</assembly>